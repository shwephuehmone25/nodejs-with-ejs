<%- include("./includes/header") %>

    <section class="mx-auto">
      <h1 class="title">Add a new post here!</h1>
      <form action="/admin/edit-post" method="post" enctype="multipart/form-data">
        <input hidden value="<%= csrfToken %>" name="_csrf" />
        <input type="text" value="<%= post._id %>" name="postId" hidden>
        <div>
          <label for="title">Enter title</label>
          <input type="text" id="title" name="title" value="<%= post.title %>" required />
        </div>
        <div>
          <label for="photo">Enter photo</label>
          <input type="file" id="photo" name="photo" />
        </div>
        <div>
          <label for="description">Enter description</label>
          <textarea
            name="description"
            id="description"
            cols="30"
            rows="10"
          ><%= post.description %></textarea>
        </div>
        <button>Update Post</button>
      </form>
    </section>
  </body>
  <%- include("./includes/footer") %>