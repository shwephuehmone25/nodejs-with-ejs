<%- include("./includes/header") %>
<h1 class="title">Home</h1>
<p>
  Lorem ipsum dolor sit amet consectetur adipisicing elit. Ad dignissimos veniam
  pariatur autem. Maxime velit eos sint. Tempore quam cumque optio laborum
  dolore commodi cum dolorem deleniti soluta, ea nemo.
</p>
<% if(isLogIn) { %>
  <a href="/admin/create-post">Add a new post</a>
  <form action="/logout" method="post">
    <input value="<%= csrfToken %>" name="_csrf" hidden>
    <button>Logout</button>
  </form>
<% } else { %>
  <a href="/login">Login</a>
  <a href="/register">Register Here!</a>
<% } %>
<hr />
<h1 class="title">Posts Lists</h1>
<% if(postsArr.length === 0 && isLogIn) { %>
  <div>
    <h4>No posts here!</h4>
    <p>Create a new post now !!!</p>
    <a href="/admin/create-post">Create a new post</a>
  </div>
<% } %>
<% for(let post of postsArr) { %>
  <div class="post-box">
    <div>
      <p class="post-title"><%= post.title %></p>
      <% if (post.userId && post.userId.email) { %>
        <p>Post By <%= post.userId.email %></p>
      <% } else { %>
        <p>Post By Unknown User</p>
      <% } %>
    </div>
    <a class="btn" href="/post/<%= post._id %>">Learn More...</a>
  </div>
<% } %>
<%- include("./includes/footer") %>
